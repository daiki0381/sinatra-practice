<h1>メモ編集画面</h1>
<form action="/memos/<%= params[:id] %>" method="post" class="wrapper">
  <input type="hidden" name="_method" value="PATCH">
  <input type="text" name="title" value="<%= sanitize(@memo["title"]) %>" maxlength="20">
  <textarea name="content" maxlength="100"><%= sanitize(@memo["content"]) %></textarea>
  <button type="submit">保存</button>
</form>
